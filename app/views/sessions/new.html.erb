<% flash.each do |name, msg| %>
  <font color=red><%= content_tag :div, msg, class: name %></font>
<% end %>
 
<h1>Login</h1>
<p>
	<%= form_tag '/login' do %>
		<table>
			<tr><td>Email:</td><td><%= text_field_tag :email %></td></tr>
			<tr><td>Password:</td><td><%= password_field_tag :password %></td></tr>
		</table>
		<%= submit_tag "Submit" %>
	<% end %>
</p>
<p>
	<strong>Don't have an account? <%= link_to 'Sign up', signup_path %></strong>
</p>
	
